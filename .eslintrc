{
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi" : "off",
    "indent" :"off",
    "curly": "error",
    "quotes": ["error", "single"],
    "spaced-comment": "off",
    "space-before-function-paren":"off",
    "brace-style": "off",
    "handle-callback-err":"off",
    "no-new": "off",
    "no-unused-vars": "off"
  },
  "env": {
    "browser": true,
    "node": true
  },
  "plugins": [
    "standard"
  ]
}
